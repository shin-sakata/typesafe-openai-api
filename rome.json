{
  "$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
  "files": {
    "ignore": ["node_modules/**/*", "dist/**/*"]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space"
  }
}
